<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <servlet>
        <servlet-name>mainServlet</servlet-name>
        <servlet-class>servlets.MainServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>mainServlet</servlet-name>
        <url-pattern>/mainServlet</url-pattern>
    </servlet-mapping>


    <servlet>
        <display-name>Controller</display-name>
        <servlet-name>controller</servlet-name>
        <servlet-class>servlets.ContServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>controller</servlet-name>
        <url-pattern>/serv</url-pattern>
    </servlet-mapping>

    <servlet>
        <display-name>ViewProfile</display-name>
        <servlet-name>viewprofile</servlet-name>
        <servlet-class>servlets.ViewProfileServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>viewprofile</servlet-name>
        <url-pattern>/view</url-pattern>
    </servlet-mapping>

    <servlet>
        <display-name>CreateProfile</display-name>
        <servlet-name>createprofile</servlet-name>
        <servlet-class>servlets.CreateServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>createprofile</servlet-name>
        <url-pattern>/create</url-pattern>
    </servlet-mapping>

    <servlet>
        <display-name>ViewAllProfiles</display-name>
        <servlet-name>viewallprofiles</servlet-name>
        <servlet-class>servlets.ViewAllServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>viewallprofiles</servlet-name>
        <url-pattern>/viewall</url-pattern>
    </servlet-mapping>

</web-app>